@model FR_System.Models.Reservation

@{
    ViewData["Title"] = "Update Booking";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    
}

<div id="page-wrapper">
			<div class="main-page">
				<h2 class="title1">Update Booking</h2>
				<div class="blank-page widget-shadow scroll" id="style-2 div1">
<form method="post" asp-action="BookingUpdate">
        <div class="border p-3">
            <div class="row">
                <div class="col-12">
                    <div  class="form-group row">
                        <label asp-for="ReservationId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control" asp-for="ReservationId">
                        </div>
                    </div>
                    <div hidden class="form-group row">
                        <label asp-for="FlightId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="FlightId">
                        </div>
                    </div>
                    <div hidden class="form-group row">
                        <label asp-for="UserId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="UserId">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Travellers" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Travellers" placeholder="No. of Travellers">
                            <span asp-validation-for="Travellers" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Totalprice" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control" asp-for="Totalprice" placeholder="Price">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-success w-75" value="Update Booking" />
                            </div>
                            <div class="col">
                                     <a class="btn btn-danger w-75" asp-action="BookingDetails" asp-controller="Reservation">Back</a>
                            </div>
                        </div>
                     </div>
                </div>
            </div>
        </div>
        
        
</form>

</div>
			</div>
		</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>