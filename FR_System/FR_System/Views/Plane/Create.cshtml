@model FR_System.Models.Plane

@{
    ViewData["Title"] = "Create Plane";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div id="page-wrapper">
			<div class="main-page">
				<h2 class="title1">Add Plane</h2>
				<div class="blank-page widget-shadow scroll" id="style-2 div1">
<form method="post" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @* <div class="form-group row">
           <h2 class="text-black-50 pl-3">Add Plane Details</h2>
        </div> *@
        <div class="form-group row">
            <label asp-for="PlaneName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="PlaneName" placeholder="Enter plane Name...">
                <span asp-validation-for="PlaneName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Seats" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Seats" placeholder="Enter number of seats...">
                <span asp-validation-for="Seats" class="text-danger"></span>
            </div>
        </div>
             <div class="form-group row">
            <div class="col-8 offset-2 row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-75" value="Add Flight" />
                </div>
                <div class="col">
                     <a class="btn btn-danger w-75" asp-action="Details" asp-controller="Plane">Back</a>
                </div>
            </div>
         </div>
</form>
</div>
			</div>
		</div>
        <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
