@model IEnumerable<FR_System.Models.Flight>
@{
    ViewData["Title"] = "Search Result";
	
        Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="padding:2rem; background-color: #b3d7ff8a;">
<h1>Search Results</h1>

<div>
    <h4>Flight</h4>
    <hr />
    
        @if(Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width:90%">
			<thead>
				<tr>
					<th>Flight Id</th>
					<th>From City</th>
					<th>To City</th>
					<th>Departure Date</th>
					<th>Departure Time</th>
					<th>Price</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
			   {
				   <tr>
					   <td width="10%">@item.FlightId</td>
					   <td width="10%">@item.FlightFrom</td>
					   <td width="10%">@item.FlightTo</td>
					   <td width="10%">@item.FlightDDate</td>
					   <td width="10%">@item.DTime</td>
					   <td width="10%">@item.Price</td>
					   <td width="20%">
						   <div class="w-100 btn-group" role="group">
								<a asp-controller="Reservation" asp-action="Booking" asp-route-Id="@item.FlightId" class="btn btn-primary mx-1">Book Flight</a>
						   </div>
					   </td>
				   </tr>
			   }
			</tbody>
		</table>
	}
	else
	{
		<p>No Flights Available.</p>

	}
	
   <a class="btn btn-danger w-20" asp-action="Search" asp-controller="Home">Back</a>

</div>
</div>
