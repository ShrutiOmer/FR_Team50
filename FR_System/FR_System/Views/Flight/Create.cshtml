@model FR_System.Models.Flight

@{
    ViewData["Title"] = "Create Flight";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
}

<div id="page-wrapper">
			<div class="main-page">
				<h2 class="title1">Add Flight Details</h2>
				<div class="blank-page widget-shadow scroll" id="style-2 div1">
<form method="post" asp-action="Create">
        @* <div class="form-group row">
           <h2 class="text-black-50 pl-3">Add Flight Details</h2>
        </div> *@
        <div class="form-group row">
            <label asp-for="FlightFrom" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="FlightFrom" placeholder="Type City...">
                <span asp-validation-for="FlightFrom" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="FlightTo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="FlightTo" placeholder="Type City...">
                <span asp-validation-for="FlightTo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="FlightDDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="FlightDDate" placeholder="Select date" type="date" class="form-control">
                @*<i class="fas fa-calendar input-prefix" tabindex=0></i>*@
                <span asp-validation-for="FlightDDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DTime" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="DTime" placeholder="Select date" type="time" class="form-control">
                @*<i class="fas fa-clock-o input-prefix" tabindex=0></i>*@
                <span asp-validation-for="DTime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PlaneID" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                @*<input type="text" class="form-control" asp-for="PlaneID" placeholder="Plane ID">*@
                <select asp-for="PlaneID" class ="form-control" asp-items="ViewBag.PlaneID"></select>
                @*<span asp-validation-for="PlaneID" class="text-danger"></span>*@
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Price" placeholder="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-2 row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-75" value="Add Flight" />
                </div>
                <div class="col">
                      <a class="btn btn-danger w-75" asp-action="Details" asp-controller="Flight">Back</a>
                </div>
            </div>
         </div>
</form>
</div>
</div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>